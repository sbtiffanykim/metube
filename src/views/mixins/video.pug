mixin video(video)
    a(href=`/videos/${video.id}`).video-mixin
        div.video-mixin__thumbnail
        div.video-mixin__content
            div.video-mixin__avatar
                img(src=`${video.owner.avatarUrl}`)
            div.video-mixin__data
                div.video-mixin__data-detail
                    span.video-mixin__data-title=video.title
                    span.video-mixin__data-owner=video.owner.name
                div.video-mixin__meta
                    span #{video.meta.views} views Â· 
                    span=video.createdAt.toDateString()
